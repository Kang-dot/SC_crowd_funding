<% layout('../layout/layout')%>


<div class="container">
    <div class="row">
        
        <div class="col col-md-4">
                  <div class="card">
                <img class="card-img-top" src="/images/<%= fund_item.image %>" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title"><%= fund_item.fundingName %></h4>
                    <p class="card-text"><%= fund_item.fundingInfo%></p>
                    <a href="#" class="btn btn-primary">후원하기</a>
                </div>
                <div class="container">
                    <ul class="list-group">
                        <li class="list-group-item">목표금액 : <%= fund_item.goalAmount %></li>
                        <li class="list-group-item">기간 : <%= fund_item.deadline %></li>
                        <li class="list-group-item">후원자 : </li>
                    </ul>
                </div>
            </div> 
        </div>
        
    </div>

</div>
<div class="container">
    <h2>현재 모금액(*******원)</h2>
    <div class="progress">
        <div class="progress-bar" style="width:40%">40%</div>
    </div>
</div>
</div>